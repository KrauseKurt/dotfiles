# Ashfall fish theme with dimmer autosuggestion colors

# Typed command text — bright white for clarity
set -U fish_color_normal white

# Autosuggestions — dim gray (darker than before, subtle)
set -U fish_color_autosuggestion '#7E7E7E'

# Command completions — medium gray
set -U fish_color_completion '#A5A5A5'

# Selected completion — bold medium gray
set -U fish_color_selected '#A5A5A5 --bold'

# Command errors — light gray
set -U fish_color_error '#BFBFBF'

# Command search matches — bright white bold
set -U fish_color_search_match 'white --bold'

# Comments — medium gray
set -U fish_color_comment '#7E7E7E'

# Commands — slightly lighter gray
set -U fish_color_command '#A5A5A5'

# Options/flags — mid gray
set -U fish_color_option '#999999'

# Variables — lighter gray
set -U fish_color_variable '#CCCCCC'

# Operators — medium gray
set -U fish_color_operator '#7E7E7E'

# Strings — bright gray, italic
set -U fish_color_quote '#BFBFBF --italic'

# User prompt — white bold
set -U fish_color_user 'white --bold'

# Directory path — lighter gray, underline
set -U fish_color_path '#CCCCCC --underline'

# Sudo prompt — white bold
set -U fish_color_sudo 'white --bold'

# Cursor color — pure white
set -U fish_color_cursor white
